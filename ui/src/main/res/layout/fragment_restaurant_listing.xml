<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    android:orientation="vertical"
    android:padding="10dp">

    <Spinner
        android:id="@+id/restaurant_listing_sort_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/centered_view" />

    <View
        android:id="@+id/centered_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/restaurant_listing_filter"
        style="@style/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/restaurant_listing_sort_options"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/centered_view"
        android:background="@color/screen_background_color"
        android:hint="restaurant_listing_filter_hint" />

    <TextView
        android:id="@+id/restaurant_listing_title"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_listing_sort_options"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="string/restaurants_listing_title"
        android:textColor="@android:color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/restaurant_listing_sort_options"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:itemCount="20"
        tools:listitem="@layout/list_item_restaurant" />

    <TextView
        android:id="@+id/restaurant_listing_no_restaurant_label"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="string/restaurants_listing_no_result_label"
        android:textColor="@android:color/black" />
</RelativeLayout>
